<div class="container text-center">

  <h2 class="pt-5">Log in</h2>

  <div class="pt-3">
    <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <div class="field pt-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", style: "width: 250px;" %>
      </div>
    
      <div class="field pt-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", style: "width: 250px;" %>
      </div>
    
      <div class="actions pt-5">
        <%= f.submit "Log in", class: "btn btn-light border border-dark" %>
      </div>
    <% end %>
    
    <%= render "admin/shared/links" %>
  </div> 
    
</div>
