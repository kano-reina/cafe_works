<div class="container">
  <h2 class="pl-5">Users</h2>
  <hr class="w-200 border-bottom">
  <div class="row justify-content-center">
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <span class="user-name pr-5 pl-5"><%= link_to user.name, admin_user_path(user.id), class:"text-dark" %></span>
          <span class="user-email pr-5 pl-5"><%= user.email %></span>
          <span class="user-action pr-5 pl-5"><%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-light border border-dark" %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>