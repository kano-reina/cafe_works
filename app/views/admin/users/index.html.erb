<div class="container">
  <h2 class="pl-5">Users</h2>
  <hr class="w-200 border-bottom">
  <div class="row justify-content-center">
    <ul class="user-list">
      <% @users.each do |user| %>
        <div class="user-item row">
          <div class="col-4"><%= link_to user.name, admin_user_path(user.id), class:"text-dark" %></div>
          <div class="col-4 email"><%= user.email %></div>
          <div class="col-4 d-flex justify-content-end"><%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-light border border-dark" %></div>
        </div>
      <% end %>
    </ul>
  </div>
  <div class="d-flex justify-content-center mt-4 mb-4">
    <%= paginate @users %> 
  </div>
</div>