<%= form_with model: @cafe, url: cafes_path do |f| %>
  <p>Cafe Name</p>
  <%= f.text_field :name %>

  <p>Categories</p>
  <p>Charge your phone/PC</p>
  <%= f.radio_button :has_power_outlet, true, checked: false %>
  <%= f.label :has_power_outlet_true, "available" %>
  <%= f.radio_button :has_power_outlet, false, checked: false %>
  <%= f.label :has_power_outlet_false, "N/A" %>
  
  <p>Environment</p>
  <%= f.radio_button :chat_meeting_ok, true, checked: false %>
  <%= f.label :chat_meeting_ok_true, "Chat/Meeting OK" %>
  <%= f.radio_button :chat_meeting_ok, false, checked: false %>
  <%= f.label :chat_meeting_ok_false, "Quiet Environment" %>
  
  <p>Wifi</p>
  <%= f.radio_button :has_wifi, true, checked: false %>
  <%= f.label :has_wifi_true, "available" %>
  <%= f.radio_button :has_wifi, false, checked: false %>
  <%= f.label :has_wifi_false, "N/A" %>

  <p>Address</p>
  <%= f.text_field :address, placeholder:"東京都新宿区新宿３丁目１ー１ー１" %>
  
  <p>City</p>
  <div class="field">
    <%= f.select :city, ['Tokyo', 'Osaka', 'Shanghai', 'Bangkok', 'Melbourne', 'New York', 'Los Angeles', 'Paris', 'Rome','London'], prompt: 'Select a City' %>
  </div>
  
  <p>Tags</p>
  <%= f.fields_for :cafe_tags do |cafe_tag_form| %>
    <% Tag.all.each do |tag| %>
      <%= cafe_tag_form.check_box :tag_id, { multiple: true }, tag.id, nil %>
      <%= cafe_tag_form.label :tag_id, tag.name %><br>
    <% end %>
  <% end %>
  
  <%= f.submit 'Add cafe' %>
<% end %>