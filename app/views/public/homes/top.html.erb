<div class="container cafe-background vh-100 d-flex justify-content-center align-items-center" style="background-image: url(<%= asset_path('background.jpg') %>); max-width: 100%;">
  <div class="row">
    <div class="justify-center align-items-center mx-auto pt-5">
      <div>
        <div class="text-center">
          <%= form_with url: cafes_path, method: :get, local: true do |form| %>
            <%= form.text_field :query, value: params[:query], placeholder:"cafe name, location", style: "width: 300px;" %>
            <%= form.submit 'Search' %>
          <% end %>
        </div>
  
        <div class="text-center">
          <% Tag.top_tags.each do |tag| %>
            <%= link_to tag.name, cafes_path(tag: tag.name), class: "tag-link", style: "background-color: white; opacity: 0.8;"%>
          <% end %>
        </div>
      </div>
      
      <div class="pt-4">
        <hr class="w-200 border-top">
        <h6 class="text-center pt-3 text-white">Search by your needs</h6>
        <div class="d-flex flex-wrap d-grid grid-cols-3 gap-2 justify-content-center pt-4">
          <div class="box p-3">
            <div class="p-3">
              <%= link_to 'Charge your devices', cafes_path(category: 'has_power_outlet'), class:"box text-center" %>
            </div>
          </div>
          <div class="box">
            <div class="p-3">
              <%= link_to 'Chat/Meeting', cafes_path(category: 'chat_meeting_ok'), class:"box text-center" %>
            </div>
          </div>
          <div class="box">
            <div class="p-3">
              <%= link_to 'Focus', cafes_path(category: 'quiet_environment'), class:"box text-center" %>
            </div>
          </div>
          <div class="box">
            <div class="p-3">
              <%= link_to 'Free Access to Wi-Fi', cafes_path(category: 'has_wifi'), class:"box text-center" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>