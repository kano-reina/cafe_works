<div class="container">
  <% if @cafe.errors.any? %>
    <ul class="pb-3">
      <% @cafe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
 
  <div class="pt-5">
    <%= form_with model: @cafe, url: cafes_path do |f| %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <p>Cafe Name</p>
          </div>
          <div class="col-md-10">
            <%= f.text_field :name, placeholder: "Cafe Name", class: "form-control" %>
          </div>
        </div>
      </div>
  
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <p>Categories</p>
          </div>
          <div class="col-md-10">
            <p>Charge your phone/PC</p>
            <%= f.radio_button :has_power_outlet, true %>
            <%= f.label :has_power_outlet_true, "available", class: "mr-2" %>
            <%= f.radio_button :has_power_outlet, false %>
            <%= f.label :has_power_outlet_false, "N/A" %>
            
            <p>Environment</p>
            <%= f.radio_button :chat_meeting_ok, true %>
            <%= f.label :chat_meeting_ok_true, "Chat/Meeting OK", class: "mr-2" %>
            <%= f.radio_button :chat_meeting_ok, false %>
            <%= f.label :chat_meeting_ok_false, "Quiet Environment" %>
            
            <p>Wifi</p>
            <%= f.radio_button :has_wifi, true %>
            <%= f.label :has_wifi_true, "available", class: "mr-2" %>
            <%= f.radio_button :has_wifi, false %>
            <%= f.label :has_wifi_false, "N/A" %>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <p>Address</p>
          </div>
          <div class="col-md-10">
            <%= f.text_field :address, placeholder:"東京都新宿区新宿３丁目１ー１ー１", class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <p>Opening Hours</p>
          </div>
          <div class="col-md-10">
            <%= f.text_area :opening_hours, placeholder:
            "Mon 9:00 AM - 12:00PM, 3:00PM - 8:00 PM\nTue 9:00 AM - 12:00PM\nWed 9:00 AM - 12:00PM\nThu 9:00 AM - 12:00PM\nFri 9:00 AM - 12:00PM\nSat 9:00 AM - 12:00PM\nSun 9:00 AM - 12:00PM", class: "form-control opening-hours" %>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <p>About Cafe</p>
          </div>
          <div class="col-md-10">
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <p>Tags</p>
          </div>
          <div class="col-md-10">
            <%= f.text_field :tag_list, placeholder:"cozyvibes,Koreanstyle,XXXcafe", class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="pt-5 pb-5 text-center">
        <%= f.submit 'Add cafe', class: "btn btn-light border border-dark" %>
      </div>
    <% end %> 
  </div> 

</div>