<h2><%= @cafe.name %></h2>

<%= form_with model: [@cafe, @cafe.reviews.build], local: true do |form| %>
  <div>
    <%= form.select :rating, options_for_select(1..5), include_blank: true %>
  </div>
  <div>
    <%= form.label :image %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit 'Post Review' %>
  </div>
<% end %>