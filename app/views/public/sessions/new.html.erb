<div class="container text-center">

  <h2 class="pt-5">Log in</h2>
  
  <div class="pt-3">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field pt-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", style: "width: 250px;" %>
      </div>
    
      <div class="field pt-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", style: "width: 250px;" %>
      </div>
    
      <div class="actions pt-3">
        <%= f.submit "Log in", class: "btn btn-light border border-dark" %>
      </div>
    <% end %>
    
    <div class="mt-3">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
    
    <div class="mt-2">
      <%= link_to "Log in as guest",  public_guest_sign_in_path, method: :post %>
    </div>
  </div>  
  
</div>